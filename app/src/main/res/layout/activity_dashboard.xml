<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontBlackEnable"
    tools:context=".activity.DashboardActivity">


    <TextView
        app:layout_constraintBottom_toTopOf="@id/btn_sign_out"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/txt_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_success_msg"/>


    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/txt_log_out"
        android:id="@+id/btn_sign_out"
        android:layout_margin="@dimen/activity_horizontal_margin"
        style="@style/ButtonContainedFullRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>